<div class="container">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<%= form_with model: @store,local: true do |form| %>
			  <div>
			    <%= form.label :name , class: 'label' %>
			    <%= form.text_field :name, class: 'form-control' %>
			  </div>

			  <div>
			    <%= form.label :type %>
			    <%= form.text_field :store_type,  class: 'form-control' %>
			  </div>


			  <div>
			    <%= form.label :address %>
			    <%= form.text_field :address,  class: 'form-control' %>
			  </div>

			  <div>
			    <%= form.label :owner_name %>
			    <%= form.text_field :owner_name,  class: 'form-control' %>
			  </div>

			  <div>
			    <%= form.label :owner_number %>
			    <%= form.text_field :owner_number,  class: 'form-control' %>
			  </div>

			  <div>
			    <%= form.label :timing %>
			    <%= form.time_field :timing,  class: 'form-control' %>
			  </div>

			  <div>
			    <%= form.label :status %>
			    <%= form.select :status, ['New', 'Open', 'Brand', 'Close', 'Temporary Not Available'], {}, {class: 'form-control'} %>
			  </div>

			  <div class="mt-3">
			  	<% if @store.present? %>
				  	<% @store.image.each do |image| %>
				  		<span>
		    				<%= image_tag url_for(image),:size => "125x125", class: 'rounded-circle'%>
		    			</span>

		    			<span style="margin-left: 100px;">
		    				<%= link_to "Delete", delete_image_attachment_store_detail_path(image.id),method: :delete, remote: true, :class => "btn btn-danger" , data: { confirm: 'Do You Want To Delete ?' } %>
		    			</span>
		    			<br>
					<% end %>
				<% end %>
				<br>

			  	<%= form.label :Images, class: 'mt-3' %>
			    <% 3.times do %>
			    <%= form.file_field :image, multiple: true, class: 'mt-3' %>
			    <% end %>
			  	
			  </div>
			 
			  <div>
			    <%= form.submit "Submit", class: 'btn btn-primary mt-3 mb-3' %>
			  </div>
			<% end %>
		</div>
		<div class="col-md-4"></div>	
	</div>
</div>