<div class="container-fluid">

	<div class="col-md-12">
		<h3 class="text-center mt-3 mb-3" style="color: orange; font-style: italic; text-decoration: underline; ">Show Store </h3>
	</div>
	<div class="row">
		<div class="col-md-12">
			<table border="1" class="table">
				<thead class="table-primary">
					<th>Name</th>
					<th>Type</th>
					<th>Address</th>
					<th>Owner Name</th>
					<th>Owner Number</th>
					<th>Timing</th>
					<th>Status</th>
				</thead>
				<tr>
					<td><%= @store.name %></td>
					<td><%= @store.store_type %></td>
					<td><%= @store.address %></td>
					<td><%= @store.owner_name %></td>
					<td><%= @store.owner_number %></td>
					<td><%= @store.timing %></td>
					<td><%= @store.status %></td>	
				</tr>
			</table>
		</div>	
	</div>	
	<hr>

	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-4 mt-3 mb-3">
		<h3>Remark and Ratings</h3>
		<%= form_for @store ,remote: true do |form| %>
			<div>
			    <%= form.label :remark %><br>
			    <%= form.text_field :remark, class: 'form-control' %>
			</div>
			<div class="mt-3">
			    <%= form.label :total_ratings %><br>
			    <%= form.select :total_ratings, ['1', '2', '3', '4', '5'],{},{class: "form-control"} %>
			</div>
			<div>
				<%= form.submit "Save",class: 'btn btn-primary mt-3 mb-3' %>
			</div>
		<% end %>
		</div>

		<div class="col-md-2"></div>
		<hr>
		<div class="col-md-4 mt-3 mb-3">
			<h2>Comment</h2>
			<%= form_with model: [ @store, @store.store_ratings.build ] do |form| %>
				<div class="">
					<%= form.label :Comments %><br>
					<%= form.text_field :store_rating_with_comments, class: 'form-control' %>
				</div>
				<div class="mt-3">
					<%= form.label :given_by %><br>
					<%= form.select :given_by, ['User', 'Buyer', 'Viewer', 'Review'],{},{class: "form-control"} %>
				</div>
				<div>
					<%= form.submit "Comment", class: 'btn btn-primary mt-3 mb-3' %>
				</div>
			<% end %>
		</div>
		<div class="col-md-1"></div>
	</div>
	<div class="text-center"> <%= link_to "Back to Home", store_details_path, class: 'btn btn-link tex' %>
	</div>
</div>	